{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es2023"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitReturns": true,
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@parsers/*": ["./src/parsers/*"],
      "@rules/*": ["./src/rules/*"],
      "@utils/*": ["./src/utils/*"],
      "@test-utils/*": ["./test/utils/*"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "types": ["jest"]
  },
  "include": ["src", "test"]
}
