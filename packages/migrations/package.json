{
  "name": "@swisspost/design-system-migrations",
  "version": "1.0.0-beta.0",
  "description": "Angular schematics for the design system styles migration.",
  "keywords": [
    "schematics"
  ],
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://swisspost-web-frontend.netlify.app",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && copyfiles -u 1 src/*/schema.json src/*/files/** src/migrations.json dist && copyfiles package.json README.md LICENSE dist && json -I -f dist/package.json -e \"delete this.publishConfig.directory\"",
    "todo:test": "npm run build && jasmine src/**/*_spec.js"
  },
  "dependencies": {
    "@angular-devkit/core": "14.2.4",
    "@angular-devkit/schematics": "14.2.4",
    "@angular/compiler": "14.2.4",
    "@angular/core": "14.2.4",
    "rxjs": "7.5.6",
    "typescript": "4.8.3",
    "zone.js": "0.11.8"
  },
  "devDependencies": {
    "@types/jasmine": "4.3.0",
    "@types/node": "16.11.56",
    "copyfiles": "2.4.1",
    "jasmine": "4.4.0",
    "json": "11.0.0"
  },
  "schematics": "./dist/migrations.json"
}
