    "@angular/core": "21.1.2",
    "@angular/forms": "20.3.16",
    "@angular/platform-browser": "20.3.16",
    "@angular/platform-browser-dynamic": "20.3.16",
    "@angular/router": "20.3.16",
    "@swisspost/design-system-components": "workspace:10.0.0-next.60",
    "@swisspost/design-system-styles": "workspace:10.0.0-next.60",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular/build": "20.3.14",
