    "eslint": "9.26.0",
    "globals": "16.0.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ng-packagr": "20.1.0",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.16.0"
