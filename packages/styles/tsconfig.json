{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "@playwright/test"]
    },
    "include": ["tests/**/*.ts", "playwright.config.ts"],
    "exclude": ["node_modules"]
  }