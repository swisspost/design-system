{
  "name": "@swisspost/design-system-styles",
  "version": "5.0.0-beta.2",
  "description": "Design System Styles for the Swiss Post web platform.",
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://swisspost-web-frontend.netlify.app",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "directory": "./dist",
    "access": "public",
    "linkDirectory": true
  },
  "ng-update": {
    "migrations": "@swisspost/design-system-migrations/migrations.json"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/*",
    "start": "gulp watch",
    "prebuild": "pnpm clean",
    "build": "gulp build",
    "format": "prettier src/**/*.scss --write",
    "lint": "stylelint src/**/*.scss",
    "lint:fix": "stylelint src/**/*.scss --fix",
    "test": "jest --onlyChanged",
    "storybook:start": "start-storybook -p 9201",
    "storybook:start:headless": "start-storybook -p 9301 -s www --no-open",
    "storybook:build": "build-storybook",
    "storybook:test": "start-server-and-test storybook:start:headless 9301 'percy exec -- cypress run --record false'",
    "postinstall": "pnpm --prefix node_modules/cypress postinstall"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6",
    "bootstrap": "5.1.3",
    "start-server-and-test": "1.14.0"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@percy/cli": "1.12.0",
    "@percy/cypress": "3.1.2",
    "@storybook/addon-actions": "6.5.12",
    "@storybook/addon-essentials": "6.5.12",
    "@storybook/addon-interactions": "6.5.12",
    "@storybook/addon-links": "6.5.12",
    "@storybook/builder-webpack4": "6.5.12",
    "@storybook/html": "6.5.12",
    "@storybook/manager-webpack4": "6.5.12",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/testing-library": "0.0.13",
    "autoprefixer": "10.4.12",
    "babel-loader": "8.2.5",
    "css-loader": "5.2.7",
    "cypress": "10.10.0",
    "glob": "8.0.3",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sass": "5.1.0",
    "jest": "29.2.1",
    "postcss": "8.4.18",
    "postcss-scss": "4.0.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sass": "1.55.0",
    "sass-loader": "10.1.1",
    "storybook-dark-mode": "1.1.2",
    "style-loader": "2.0.0",
    "stylelint": "14.14.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0"
  },
  "sass": {
    "includePaths": [
      "node_modules"
    ],
    "outputDir": "./dist",
    "tscOutDir": "./out-tsc/lib"
  }
}
