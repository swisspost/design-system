{
  "name": "@swisspost/design-system-styles",
  "version": "10.0.0-next.62",
  "description": "Design System Styles for the Swiss Post web platform.",
  "author": "Swiss Post <design-system@post.ch>",
  "license": "Apache-2.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://design-system.post.ch",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "directory": "./dist",
    "access": "public",
    "linkDirectory": true
  },
  "scripts": {
    "play": "vite --open",
    "start": "gulp watch",
    "build": "pnpm turbo run build:force",
    "build:force": "pnpm clean && gulp build",
    "clean": "rimraf dist src/tokens/temp src/icons/temp",
    "unit": "gulp sass:tests",
    "lint": "stylelint src/**/*.scss !src/tokens/temp/**",
    "lint:fix": "stylelint src/**/*.scss !src/tokens/temp/** --fix",
    "format": "prettier src/**/*.scss --config ../../.prettierrc --write"
  },
  "dependencies": {
    "@popperjs/core": "2.11.8",
    "@swisspost/design-system-icons": "workspace:10.0.0-next.62",
    "gulp-sourcemaps": "3.0.0"
  },
  "devDependencies": {
    "@swisspost/design-system-tokens": "workspace:10.0.0-next.62",
    "@types/node": "22.10.5",
    "autoprefixer": "10.4.24",
    "copyfiles": "2.4.1",
    "glob": "13.0.0",
    "gulp": "5.0.1",
    "gulp-newer": "1.4.0",
    "gulp-postcss": "10.0.0",
    "gulp-sass": "6.0.1",
    "jest": "29.7.0",
    "postcss": "8.5.6",
    "postcss-scss": "4.0.9",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "sass-embedded": "1.78.0",
    "stylelint-config-sass-guidelines": "11.1.0",
    "stylelint": "16.26.1",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "6.12.1",
    "typescript": "5.8.3",
    "vite": "7.1.12"
  },
  "sass": {
    "loadPaths": [
      "node_modules"
    ],
    "outputDir": "./dist"
  },
  "keywords": [
    "scss",
    "components",
    "web-components",
    "collections",
    "patterns",
    "library",
    "design-system",
    "ui",
    "frontend"
  ]
}
