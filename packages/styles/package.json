{
  "name": "@swisspost/design-system-styles",
  "version": "5.0.0-beta.1",
  "description": "Design System Styles for the Swiss Post web platform.",
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://swisspost-web-frontend.netlify.app",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "directory": "./dist",
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/*",
    "prebuild": "npm run clean",
    "build": "gulp build",
    "build:ci": "gulp build",
    "lint": "stylelint src/**/*.scss",
    "lint:fix": "stylelint src/**/*.scss --fix",
    "format": "prettier src/**/*.scss --write",
    "test": "jest",
    "test:ci": "jest",
    "start": "gulp watch",
    "storybook": "start-storybook -p 6006 --quiet",
    "build:storybook": "build-storybook"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6",
    "bootstrap": "5.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@storybook/addon-actions": "6.5.10",
    "@storybook/addon-essentials": "6.5.10",
    "@storybook/addon-interactions": "6.5.10",
    "@storybook/addon-links": "6.5.10",
    "@storybook/builder-webpack4": "6.5.10",
    "@storybook/html": "6.5.10",
    "@storybook/manager-webpack4": "6.5.10",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/testing-library": "0.0.13",
    "autoprefixer": "10.4.8",
    "babel-loader": "8.2.5",
    "css-loader": "5.2.7",
    "glob": "8.0.3",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sass": "5.1.0",
    "jest": "29.0.3",
    "postcss": "8.4.16",
    "postcss-scss": "4.0.4",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sass": "1.54.5",
    "sass-loader": "10.1.1",
    "storybook-dark-mode": "1.1.0",
    "style-loader": "2.0.0",
    "stylelint": "14.11.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0"
  },
  "sass": {
    "includePaths": [
      "node_modules"
    ],
    "outputDir": "./dist",
    "tscOutDir": "./out-tsc/lib"
  }
}
