{
  "name": "@swisspost/design-system-styles",
  "version": "5.0.0",
  "description": "Design System Styles for the Swiss Post web platform.",
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://swisspost-web-frontend.netlify.app",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "directory": "./dist",
    "access": "public",
    "linkDirectory": true
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/*",
    "start": "npm-run-all --parallel styles:start && schematics:start",
    "prebuild": "pnpm clean",
    "build": "npm-run-all --parallel styles:build && pnpm schematics:build",
    "format": "prettier src/**/*.scss --write",
    "lint": "stylelint src/**/*.scss",
    "lint:fix": "stylelint src/**/*.scss --fix",
    "test": "jest --onlyChanged",
    "styles:start": "gulp watch",
    "styles:build": "gulp build",
    "storybook:start": "start-storybook -p 9201",
    "storybook:start:headless": "start-storybook -p 9301 -s www --no-open",
    "storybook:build": "build-storybook",
    "storybook:test": "start-server-and-test storybook:start:headless 9301 'percy exec -- cypress run --record false'",
    "schematics:start": "copyfiles schematics/migrations.json dist && tsc -p tsconfig.schematics.json --watch",
    "schematics:build": "copyfiles schematics/migrations.json dist && tsc -p tsconfig.schematics.json"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6",
    "bootstrap": "5.1.3"
  },
  "devDependencies": {
    "@angular-devkit/core": "14.2.7",
    "@angular-devkit/schematics": "14.2.7",
    "@angular/compiler": "14.2.8",
    "@angular/core": "14.2.8",
    "@babel/core": "7.19.6",
    "@percy/cli": "1.12.0",
    "@percy/cypress": "3.1.2",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-interactions": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/builder-webpack4": "6.5.13",
    "@storybook/html": "6.5.13",
    "@storybook/manager-webpack4": "6.5.13",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/testing-library": "0.0.13",
    "@types/node": "16.18.3",
    "autoprefixer": "10.4.13",
    "babel-loader": "8.2.5",
    "cheerio": "1.0.0-rc.12",
    "copyfiles": "2.4.1",
    "css-loader": "5.2.7",
    "cypress": "10.11.0",
    "glob": "8.0.3",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sass": "5.1.0",
    "jest": "29.2.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.18",
    "postcss-scss": "4.0.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "sass": "1.55.0",
    "sass-loader": "10.1.1",
    "start-server-and-test": "1.14.0",
    "storybook-dark-mode": "1.1.2",
    "style-loader": "2.0.0",
    "stylelint": "14.14.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.8.4",
    "zone.js": "0.11.8"
  },
  "sass": {
    "includePaths": [
      "node_modules"
    ],
    "outputDir": "./dist",
    "tscOutDir": "./out-tsc/lib"
  },
  "schematics": "./schematics/migrations.json",
  "ng-update": {
    "migrations": "./schematics/migrations.json"
  }
}
