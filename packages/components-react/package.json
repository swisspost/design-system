{
  "name": "@swisspost/design-system-components-react",
  "version": "9.0.0-next.29",
  "description": "Design System React Components for easy integration with the React ecosystem",
  "author": "Swiss Post <design-system@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://design-system.post.ch",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "linkDirectory": true
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/stencil-generated/*.js",
      "types": "./dist/components/stencil-generated/*.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run clean && tsc -p .",
    "clean": "rimraf dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "dependencies": {
    "@swisspost/design-system-components": "workspace:9.0.0-next.29",
    "@stencil/react-output-target": "0.8.2"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@types/node": "22.10.5",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.5",
    "eslint": "9.18.0",
    "eslint-plugin-react": "7.37.4",
    "globals": "15.14.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "6.0.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.20.0"
  },
  "keywords": [
    "components",
    "react",
    "design-system",
    "ui",
    "frontend"
  ]
}
