    "@swisspost/design-system-styles": "workspace:9.0.0-next.18",
    "@swisspost/design-system-tokens": "workspace:9.0.0-next.18",
    "@swisspost/internet-header": "workspace:2.0.0-next.18",
    "bootstrap": "5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@kurbar/storybook-addon-docs-stencil": "8.0.0",
    "@lit/task": "1.0.1",
    "@open-wc/lit-helpers": "0.7.0",
    "@percy/cli": "1.30.6",
    "@percy/cypress": "3.1.2",
    "@storybook/addon-docs": "8.4.7",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-links": "8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/components": "8.4.7",
    "@storybook/core-events": "8.4.7",
    "@storybook/manager-api": "8.4.7",
    "@storybook/preview-api": "8.4.7",
    "@storybook/theming": "8.4.7",
    "@storybook/types": "8.4.7",
    "@storybook/web-components": "8.4.7",
    "@storybook/web-components-vite": "8.4.7",
    "@swisspost/design-system-components-angular": "workspace:9.0.0-next.18",
    "@swisspost/design-system-intranet-header": "workspace:9.0.0-next.18",
    "@types/css-modules": "1.0.5",
    "@types/mdx": "2.0.13",
    "@types/react": "18.3.3",
    "@types/react-syntax-highlighter": "15.5.13",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "cypress": "13.13.2",
    "cypress-axe": "1.5.0",
    "eslint": "9.18.0",
    "eslint-plugin-markdown": "5.1.0",
    "eslint-plugin-mdx": "3.1.5",
    "eslint-plugin-storybook": "0.11.2",
    "globals": "15.14.0",
    "lit": "3.2.1",
