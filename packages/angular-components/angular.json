{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "header-intranet": {
      "projectType": "library",
      "root": "projects/header-intranet",
      "sourceRoot": "projects/header-intranet/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/header-intranet/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/header-intranet/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/header-intranet/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/header-intranet/src/test.ts",
            "tsConfig": "projects/header-intranet/tsconfig.spec.json",
            "karmaConfig": "projects/header-intranet/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/header-intranet/**/*.ts",
              "projects/header-intranet/**/*.html"
            ]
          }
        }
      }
    },
    "intranet-header-showcase": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/intranet-header-showcase",
      "sourceRoot": "projects/intranet-header-showcase/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/intranet-header-showcase",
            "index": "projects/intranet-header-showcase/src/index.html",
            "main": "projects/intranet-header-showcase/src/main.ts",
            "polyfills": "projects/intranet-header-showcase/src/polyfills.ts",
            "tsConfig": "projects/intranet-header-showcase/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/intranet-header-showcase/src/favicon.ico",
              "projects/intranet-header-showcase/src/assets"
            ],
            "styles": [
              "node_modules/@swisspost/design-system-styles/post-intranet.css",
              "projects/intranet-header-showcase/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/intranet-header-showcase/src/environments/environment.ts",
                  "with": "projects/intranet-header-showcase/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "intranet-header-showcase:build:production"
            },
            "development": {
              "browserTarget": "intranet-header-showcase:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "intranet-header-showcase:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/intranet-header-showcase/src/test.ts",
            "polyfills": "projects/intranet-header-showcase/src/polyfills.ts",
            "tsConfig": "projects/intranet-header-showcase/tsconfig.spec.json",
            "karmaConfig": "projects/intranet-header-showcase/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/intranet-header-showcase/src/favicon.ico",
              "projects/intranet-header-showcase/src/assets"
            ],
            "styles": [
              "projects/intranet-header-showcase/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    }
  },
  "defaultProject": "header-intranet"
}
