{
  "name": "@swisspost/design-system-icons",
  "version": "9.0.0-next.19",
  "description": "A collection of Swiss Post icons intended for use with the Design System.",
  "author": "Swiss Post <design-system@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://design-system.post.ch",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "publishConfig": {
    "access": "public",
    "linkDirectory": true
  },
  "files": [
    "public"
  ],
  "private": false,
  "scripts": {
    "play": "pnpm build && http-server ./public -o -a localhost -p 9330",
    "start": "nodemon",
    "build": "pnpm clean && ts-node src/build.ts",
    "clean": "rimraf public/post-icons public/report.json",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "unit:updatesnapshots": "jest -u",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "fetchSVGs": "ts-node src/index.ts",
    "createUIReport": "ts-node src/build.ts createUIReport"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@tsconfig/node22": "22.0.0",
    "@types/jest": "29.5.14",
    "@types/mock-fs": "4.13.4",
    "@types/node": "22.10.5",
    "@types/node-fetch": "2.6.11",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "dotenv": "16.4.5",
    "eslint": "9.18.0",
    "eslint-plugin-jest": "28.11.0",
    "globals": "15.14.0",
    "http-server": "14.1.1",
    "https-proxy-agent": "7.0.5",
    "jest": "29.7.0",
    "mock-fs": "5.4.1",
    "node-fetch": "2.7.0",
    "node-html-parser": "7.0.1",
    "nodemon": "3.1.7",
    "rimraf": "6.0.1",
    "svgo": "3.3.2",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "8.20.0"
  },
  "keywords": [
    "icons",
    "design-system",
    "ui",
    "frontend"
  ]
}
