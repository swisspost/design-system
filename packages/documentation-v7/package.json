{
  "name": "@swisspost/design-system-documentation-v7",
  "version": "1.0.0",
  "description": "Swiss Post Design System Documentation.",
  "author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://next.design-system.post.ch",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
  "main": "index.js",
  "private": true,
  "scripts": {
    "prebuild:managerui": "sass --update --load-path=node_modules .storybook/styles/manager.scss public/manager/ui.css",
    "start": "pnpm clean & pnpm prebuild:managerui --style=expanded & storybook dev -p 9200 --quiet",
    "start:headless": "pnpm clean & pnpm prebuild:managerui --style=expanded & storybook dev -p 9300 --quiet --no-open",
    "build": "pnpm clean & pnpm prebuild:managerui --style=compressed --no-source-map & storybook build --quiet",
    "clean": "rimraf storybook-static public/manager",
    "e2e": "cypress run",
    "e2e:watch": "cypress open",
    "snapshots": "percy exec -- cypress run --config-file ./cypress.snapshot.config.js --record --key 0995e768-43ec-42bd-a127-ff944a2ad8c9"
  },
  "dependencies": {
    "@swisspost/design-system-components": "workspace:1.3.8",
    "@swisspost/design-system-components-react": "workspace:1.0.14",
    "@swisspost/design-system-icons": "workspace:1.0.8",
    "@swisspost/design-system-styles": "workspace:6.2.5",
    "@swisspost/internet-header": "workspace:1.8.1",
    "bootstrap": "5.3.0"
  },
  "devDependencies": {
    "@geometricpanda/storybook-addon-badges": "1.1.1",
    "@open-wc/lit-helpers": "^0.6.0",
    "@percy/cli": "1.26.2",
    "@percy/cypress": "3.1.2",
    "@pxtrn/storybook-addon-docs-stencil": "6.4.1",
    "@storybook/addon-a11y": "6.5.16",
    "@storybook/addon-essentials": "7.0.26",
    "@storybook/addon-links": "7.0.26",
    "@storybook/blocks": "7.0.26",
    "@storybook/manager-api": "^7.0.26",
    "@storybook/testing-library": "0.0.14-next.2",
    "@storybook/theming": "6.5.16",
    "@storybook/web-components": "7.0.26",
    "@storybook/web-components-vite": "7.0.26",
    "@types/mdx": "2.0.5",
    "@types/react": "18.2.14",
    "cypress": "12.17.1",
    "lit": "2.7.6",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "sass": "1.63.6",
    "storybook": "7.0.26",
    "storybook-dark-mode": "3.0.0",
    "typescript": "^5.1.6"
  }
}
