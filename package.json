{
	"name": "@swisspost/design-system",
	"author": "Swiss Post <oss@post.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisspost/design-system.git"
  },
  "homepage": "https://swisspost-web-frontend.netlify.app",
  "bugs": {
    "url": "https://github.com/swisspost/design-system/issues"
  },
	"private": true,
	"scripts": {
		"start": "pnpm -r --parallel --stream start",
		"start:demo": "pnpm --filter design-system-demo --filter design-system-styles --parallel --stream  start",
		"start:styles": "pnpm --filter design-system-styles storybook",
		"start:intranet-header": "pnpm --filter design-system-components-angular start",
		"start:docs": "pnpm --filter design-system-documentation start",
		"bootstrap": "pnpm install && pnpm exec lerna bootstrap && pnpm run -r build",
		"changeset:publish": "pnpm bootstrap && pnpm changeset publish",
		"changeset:version": "pnpm changeset version && pnpm install --lockfile-only"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.4.6",
		"@changesets/cli": "2.24.2",
		"lerna": "5.4.3"
	}
}
